@model List<Pustok.Models.Book>

@foreach (var item in Model)
{
    <div class="single-slide-item">
        <article class="single-product">
            <div class="product-img">
                <a href="~/Book/Detail/@item.Id">
                    <img class="primary-img" src="~/image/products/@item.MainImage" alt="">
                    <img class="secondary-img" src="~/image/products/@item.HoverImage" alt="">
                </a>
                <span class="sticker-new-2">
                    @if (item.IsNew)
                    {
                        <span class="sticker">new</span>
                    }
                    @if (item.DiscountPrice != null && item.DiscountPrice > 0)
                    {
                        <span class="sticker sticker-2">-@item.DiscountPrice%</span>
                    }
                </span>
                <div class="add-actions">
                    <ul>
                        <li class="quick-view-btn" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
                            <a href="#" onclick="openModal(@item.Id)" data-bs-toggle="tooltip" data-placement="right" title="Quick view">
                                <i class="ion-ios-search"></i>
                            </a>
                        </li>
                        <li><a href="#" data-bs-toggle="tooltip" data-placement="right" title="Compare"><i class="ion-stats-bars"></i></a></li>
                        <li><a href="#" data-bs-toggle="tooltip" data-placement="right" title="Wishlist"><i class="ion-heart"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="product-content">
                <div class="product-desc_info">
                    <h3 class="product-name"><a href="~/Book/Detail/@item.Id">@item.Title</a></h3>
                    <div class="price-box">
                        @if (item.DiscountPrice != null && item.DiscountPrice > 0)
                        {
                            <span class="price">£@(item.Price - ((item.Price * item.DiscountPrice) / 100))</span>
                            <span class="old-price">£@item.Price</span>
                            <span class="price-discount">@item.DiscountPrice%</span>
                        }
                        else
                        {
                            <span class="price">£@item.Price</span>
                        }
                    </div>
                    <div class="product-add-action">
                        <ul>
                            <li><a href="#" title="Add to cart"><i class="ion-bag"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </article>
    </div>
}
